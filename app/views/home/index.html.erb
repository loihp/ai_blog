<div class="container mx-auto p-5">
  <% @posts.each do |post| %>
    <div class="bg-white p-5 rounded shadow mb-4">
      <h1 class="text-2xl font-bold mb-2"><%= post.title %></h1>
      <p class="text-gray-700 mb-4"><%= post.body %></p>
      <div class="text-sm text-gray-500 mb-4">
        Posted by: <%= post.user.first_name %> <%= post.user.last_name %> (<%= post.user.email %>)
      </div>

      <div class="mt-4">
        <h2 class="text-xl font-semibold mb-3">Comments:</h2>
        <% post.comments.each do |comment| %>
          <div class="bg-gray-100 p-3 rounded shadow mb-2">
            <p class="text-gray-700"><%= comment.body %></p>
            <div class="text-sm text-gray-500 mt-2">
              Commented by: <%= comment.user.first_name %> <%= comment.user.last_name %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
